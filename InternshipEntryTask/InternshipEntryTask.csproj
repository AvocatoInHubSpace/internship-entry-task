    </ItemGroup>

    <ItemGroup>
      <Folder Include="Application\Common\" />
      <Folder Include="Core\" />
      <Folder Include="Infrastructure\" />
      <Folder Include="Presentation\" />
    </ItemGroup>

</Project>
